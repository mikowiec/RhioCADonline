{
  "name": "nage",
  "version": "0.1.0",
  "description": "Not another game engine",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "tslint src/**/*.ts",
    "performanceCompare": "TS_NODE_CACHE=false npx mocha --reporter 'spec' test/performance/comparisons/*.ts",
    "unit": "TS_NODE_CACHE=false npx mocha 'test/unit/**/*.spec.ts'",
    "test": "npm run unit",
    "start": "run-s clean:dist build:dev",
    "build": "run-s clean build:prod",
    "build:prod": "rollup -c",
    "build:dev": "rollup -cw",
    "clean": "run-s clean:cache clean:dist",
    "clean:cache": "rm -rf .cache",
    "clean:dist": "rm -rf dist"
  },
  "author": "David Garc√≠a Miguel <noxwings@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/benchmark": "^1.0.33",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.9",
    "@types/webgl2": "^0.0.5",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "gh-pages": "^3.0.0",
    "glsl-diffuse-lambert": "^1.0.0",
    "glsl-inject-defines": "^1.0.3",
    "glsl-perturb-normal": "^1.0.3",
    "glsl-specular-phong": "^1.0.0",
    "glslify-import": "^3.1.0",
    "md5-typescript": "^1.0.5",
    "mocha": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.13.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-glslify": "^1.2.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "type-fest": "^0.15.0",
    "typescript": "^3.9.3",
    "webgl-devtools": "git+https://github.com/NoxWings/WebGLDeveloperTools.git",
    "webgl-mock": "^0.1.7"
  },
  "dependencies": {
    "@types/gl-matrix": "^2.4.5",
    "gl-matrix": "^3.0.0",
    "gltf-loader-ts": "^0.3.1",
    "stats-js": "^1.0.0",
    "tslib": "^1.9.3"
  }
}
