{
    "extends": "tslint:recommended",
    "rules": {
        "max-classes-per-file": false,
        "arrow-parens": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-bitwise": false,
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "interface-name": false
    }
}
